# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://flexboard:flexboard_password@localhost:5432/flexboard

# JWT Configuration
# IMPORTANT: Change these secrets in production!
# Secrets must be at least 32 characters long
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
# Use comma-separated list of allowed origins or "*" for all
CORS_ORIGIN=*
